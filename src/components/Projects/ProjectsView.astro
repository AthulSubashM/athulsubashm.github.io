---
import css from "./projects.module.css";
import { projects } from "./projectslist.js";
---

<div class={css.projectsGrid}>
  {
    projects.map((project) => (
      <div class={css.projectCard}>
        <div class={css.projectImageContainer}>
          {project.image && (
            <img
              src={project.image.src || project.image}
              alt={project.title}
              class={css.projectImage}
            />
          )}
          <div class={css.projectDetailsOverlay}>
            <h3>{project.title}</h3>
            <p>{project.description}</p>
            {project.github && (
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
              >
                GitHub
              </a>
            )}
            {project.demo && (
              <a
                href={project.demo}
                target="_blank"
                rel="noopener noreferrer"
              >
                Live Demo
              </a>
            )}
          </div>
        </div>
      </div>
    ))
  }
</div>
