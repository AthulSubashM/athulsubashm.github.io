---
import Links from "../Navbar/Links.astro";
import Rocket from "../../assets/svg/Logo/rocket.astro";
---

<footer class="footer" id="footer">
  <div class="footer-grid">
    <div class="footer-logo">
      <Rocket />
    </div>
    <div class="links">
      <Links />
    </div>
    <div class="contact">
      <div class="subscribe">
        Subscriber to my Newsletter!
        <form>
          <input type="email" placeholder="Enter email" />
          <button type="submit" class="subscribe-btn">Subscribe</button>
        </form>
      </div>
      <ul class="socials">
        <li>
          <a
            href="https://github.com/AthulSubashM"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <div class="icon github"></div>
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/athulmsubash/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <div class="icon linkedin"></div>
          </a>
        </li>
        <li>
          <a
            href="https://www.instagram.com/athulxo/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
          >
            <div class="icon instagram"></div>
          </a>
        </li>
        <li>
          <a href="mailto:athul.m.subash@gmail.com" aria-label="Email">
            <div class="icon email"></div>
          </a>
        </li>
      </ul>
      <!-- <div class="email">athul.m.subash@gmail.com</div> -->
    </div>
  </div>
  <div class="copyright">
    Â© 2025 Athul Subash Marottikkal. All rights reserved.
  </div>
</footer>

<style>
  .footer {
    background-color: rgba(var(--color-2), 0.8);
    color: white;
    z-index: 10;
    font-family: "Karla", sans-serif;
    box-shadow: 2px 2px 8px 16px var(----colhex-5);
  }

  .icon {
    width: 1em;
    height: 1em;
    display: inline-block;
    background-color: currentColor;
    -webkit-mask-size: contain;
    mask-size: contain;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: center;
    mask-position: center;
  }

  .github {
    -webkit-mask-image: url("https://cdn.simpleicons.org/github");
    mask-image: url("https://cdn.simpleicons.org/github");
  }

  .linkedin {
    -webkit-mask-image: url("/icons/linkedin.svg");
    mask-image: url("/icons/linkedin.svg");
  }

  .instagram {
    -webkit-mask-image: url("https://cdn.simpleicons.org/instagram");
    mask-image: url("https://cdn.simpleicons.org/instagram");
  }

  .email {
    -webkit-mask-image: url("https://cdn.simpleicons.org/gmail");
    mask-image: url("https://cdn.simpleicons.org/gmail");
  }

  .footer-grid {
    min-height: 30vh;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    margin: 0 2rem;
  }
  .copyright {
    background-color: var(--colhex-2);
    color: var(--colhex-5);
    text-align: center;
  }

  .socials {
    display: flex;
    gap: 1rem;
    padding: 0;
    cursor: pointer;
  }
  .socials a:hover {
    color: var(--colhex-4);
  }

  .subscribe {
    font-size: 1.1rem;
    font-weight: 500;
  }
  form {
    display: flex;
    gap: 10px;
    margin-top: 10px;
  }

  form input {
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    color: white;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.5em 1em;
    font-size: 1rem;
    font-weight: 400;
    outline: none;
    transition:
      border-color 0.3s ease,
      background-color 0.3s ease;
  }

  form input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  form input:focus {
    border-color: var(--colhex-4);
    background-color: rgba(255, 255, 255, 0.15);
  }

  .subscribe-btn {
    background-color: var(--colhex-4);
    color: white;
    border: none;
    border-radius: 50px;
    padding: 0.5em 1.5em;
    font-weight: 600;
    cursor: pointer;
    transition:
      transform 0.2s ease,
      background-color 0.2s ease;
  }

  .subscribe-btn:hover {
    transform: scale(1.05);
    background-color: #8b5cf6; /* Slightly lighter shade */
  }

  .socials {
    display: flex;
    gap: 1.5rem;
    padding: 0;
    margin-top: 1rem;
  }

  .socials a {
    display: block;
    color: white;
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }

  .socials a:hover {
    transform: translateY(-2px);
  }

  .links :global(ul) {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links li {
    cursor: pointer;
  }


  .footer-logo {
    --size: 12em;
    margin: auto;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      margin: 0 1rem;
    }
    .contact {
      grid-column: span 2;
    }
    .footer-logo {
      --size: 6em;
    }
    .contact {
      margin-top: 1rem;
      display: grid;
      justify-content: center;
    }
  }
</style>
