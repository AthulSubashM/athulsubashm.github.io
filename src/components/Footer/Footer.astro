<style>
  .footer {
    background-color: rgba(var(--color-2), 0.8);
    color: white;
    z-index: 10;
    font-family: "Karla", sans-serif;
    box-shadow: 2px 2px 8px 16px var(----colhex-5);
    margin-top: 10rem;
  }

  .icon {
    width: 1em;
    height: 1em;
    display: inline-block;
    background-color: currentColor;
    -webkit-mask-size: contain;
    mask-size: contain;
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: center;
    mask-position: center;
  }

  .github {
    -webkit-mask-image: url("https://cdn.simpleicons.org/github");
    mask-image: url("https://cdn.simpleicons.org/github");
  }

  .linkedin {
    -webkit-mask-image: url("/icons/linkedin.svg");
    mask-image: url("/icons/linkedin.svg");
  }

  .instagram {
    -webkit-mask-image: url("https://cdn.simpleicons.org/instagram");
    mask-image: url("https://cdn.simpleicons.org/instagram");
  }

  /* .email { */
  /*   -webkit-mask-image: url("https://cdn.simpleicons.org/gmail"); */
  /*   mask-image: url("https://cdn.simpleicons.org/gmail"); */
  /* } */

  .footer-grid {
    min-height: 30vh;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    align-items: center;
    margin: 0 2rem;
  }
  .copyright {
    background-color: var(--colhex-2);
    color: var(--colhex-5);
    text-align: center;
  }

  .contact{
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .email{
    font-family: "Elms Sans";
    font-size:clamp(1.5rem, 0.2692rem + 2.5641vw, 2rem);
    text-decoration: none;
    transition: color 0.3s ease;
    position: relative;
    color: white;
  }
  .email:hover{
    color: var(--colhex-4);
  }


  .email::after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--colhex-4);
    transition: width 0.3s ease-in-out;
  }



  .email:hover::after {
  width: 100%;
  }

  .socials {
    display: flex;
    gap: 1rem;
    padding: 0;
    cursor: pointer;
  }
  .socials a:hover {
    color: var(--colhex-4);
  }

   .socials {
    display: flex;
    gap: 1.5rem;
    padding: 0;
    margin-top: 1rem;
    justify-content: center;
  }

  .socials a {
    display: block;
    color: white;
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }

  .socials a:hover {
    transform: translateY(-2px);
  }

  .links :global(ul) {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links li {
    cursor: pointer;
  }


  .footer-logo {
    --size: 12em;
    margin: auto;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 3fr 2fr;
      margin: 0 1rem;
    }
    .contact {
      grid-column: span 2;
    }
    .footer-logo {
      --size: 6em;
    }
    .contact {
      margin-top: 1rem;
      display: grid;
      justify-content: center;
    }
  }
</style>
