<div id="icon-sphere-container"></div>

<script>
  import { IconSphere } from "../../../scripts/IconSphere.js";
  import { icons } from "../../../scripts/icons.js";

  document.addEventListener("astro:page-load", () => {
    const container = document.getElementById("icon-sphere-container");
    if (container) {
      // Clear previous content if any, though Astro usually handles DOM replacement.
      // container.innerHTML = '';
      new IconSphere(container, icons);
    }
  });
</script>

<style>
  #icon-sphere-container {
    width: 100%;
    height: 100%;
    min-height: 50vh;
  }
</style>
