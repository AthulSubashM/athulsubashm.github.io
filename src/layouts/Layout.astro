---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar/Navbar.astro";
import Footer from "../components/Footer/Footer.astro";
import TwinklingStars from "../components/Background/TwinklingStars.astro";
import ShootingStars from "../components/Background/ShootingStars.astro";
import "../CSS/index.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Athul Subash's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Elms+Sans:wght@400;500;600&family=Karla:wght@400;600;700&family=Roboto+Slab:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>
  <body>
    <div class="bg"></div>
    <div class="app-container">
      <Navbar />
      <TwinklingStars />
      <ShootingStars />
      <main class="app-content">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
